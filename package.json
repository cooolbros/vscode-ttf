{
    "name": "vscode-ttf",
    "displayName": "VSCode TTF",
    "description": "TrueType font viewer for VSCode",
    "version": "0.1.0",
    "license": "MIT",
    "publisher": "pfwobcke",
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "ttf"
    ],
    "icon": "icon.png",
    "main": "./apps/extension/dist/extension.js",
    "browser": "./apps/extension/dist/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/cooolbros/vscode-ttf"
    },
    "engines": {
        "vscode": "^1.95.0"
    },
    "contributes": {
        "customEditors": [
            {
                "viewType": "vscode-ttf.TTFEditor",
                "displayName": "TTF Editor",
                "selector": [
                    {
                        "filenamePattern": "*.ttf"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "package": "vsce package --no-dependencies",
        "vscode:prepublish": "pnpm build"
    },
    "devDependencies": {
        "@vscode/vsce": "^3.2.2",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "turbo": "^2.4.4",
        "typescript": "^5.8.2",
        "webpack": "^5.98.0",
        "webpack-cli": "^6.0.1"
    },
    "vsce": {
        "dependencies": false
    },
    "packageManager": "pnpm@10.6.3"
}
