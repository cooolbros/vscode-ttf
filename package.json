{
    "name": "vscode-ttf",
    "displayName": "VSCode TTF",
    "description": "TrueType font viewer for VSCode",
    "version": "1.0.0",
    "license": "MIT",
    "publisher": "pfwobcke",
    "categories": [
        "Visualization"
    ],
    "keywords": [
        "ttf"
    ],
    "icon": "icon.png",
    "main": "./dist/extension/extension.js",
    "browser": "./dist/extension/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/cooolbros/vscode-ttf"
    },
    "engines": {
        "vscode": "^1.105.0"
    },
    "contributes": {
        "customEditors": [
            {
                "viewType": "vscode-ttf.TTFEditor",
                "displayName": "TTF Editor",
                "selector": [
                    {
                        "filenamePattern": "*.ttf"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "build": "pnpm build:client && pnpm build:extension",
        "build:client": "vite build --outDir dist/client",
        "build:extension": "vite build --ssr src/extension.ts --outDir dist/extension",
        "vscode:prepublish": "pnpm build"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@types/vscode": "^1.105.0",
        "@types/vscode-webview": "^1.57.5",
        "svelte": "^5.43.3",
        "typescript": "^5.9.3",
        "vite": "^7.1.12"
    },
    "vsce": {
        "dependencies": false
    },
    "type": "module",
    "packageManager": "pnpm@10.20.0"
}
